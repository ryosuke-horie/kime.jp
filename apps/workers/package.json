{
	"name": "workers",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"lint": "pnpm biome check",
		"format": "pnpm biome check --write",
		"preview": "$npm_execpath run build && wrangler dev dist-server/index.js",
		"deploy": "$npm_execpath run build && wrangler deploy dist-server/index.js",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"typecheck": "pnpm exec tsc --noEmit",
		"generate": "drizzle-kit generate",
		"migrate:production": "drizzle-kit migrate",
		"migrate:development": "wrangler d1 migrations apply kime_mvp --local",
		"studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.5.0",
		"drizzle-orm": "^0.43.1",
		"hono": "^4.7.8",
		"uuid": "^11.1.0",
		"zod": "^3.24.4"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.1.0",
		"@cloudflare/vitest-pool-workers": "^0.8.24",
		"@hono/vite-build": "^1.5.0",
		"@types/node": "^22.15.17",
		"@types/uuid": "^10.0.0",
		"@vitest/coverage-istanbul": "^3.1.3",
		"@vitest/coverage-v8": "^3.1.3",
		"drizzle-kit": "^0.31.1",
		"miniflare": "^4.20250507.0",
		"typescript": "^5.8.3",
		"vite": "^6.3.5",
		"vitest": "^3.1.3",
		"wrangler": "^4.4.0"
	}
}
