{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"*/.next",
			"*/.turbo",
			"*/.wrangler",
			"*/dist*",
			"*/node_modules",
			"*/cloudflare-env.d.ts",
			"*/worker-configuration.d.ts",
            "apps/web/src/components/ui/**/*",
            "apps/web/src/hooks/use-mobile.ts",
            "apps/workers/**/*.config.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100,
		"lineEnding": "lf"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "error"
			}
		},
		"ignore": [
			"**/worker-configuration.d.ts"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"jsxQuoteStyle": "double"
		}
	}
}
