{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"cache": false,
			"persistent": true
		},
		"format": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"cache": true,
			"outputs": ["coverage/**"]
		},
		"test:coverage": {
			"cache": true,
			"outputs": ["coverage/**"]
		}
	}
}
